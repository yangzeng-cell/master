<view class="phonePage">
  <view wx:if="{{ errCodeTips }}" class="code_error {{ isIphoneX ? 'code_error_iphoneX' : '' }}">{{
    errCodeTips
  }}</view>
  <view class="page__head">
    <view class="title"> 验证手机号 </view>
    <view class="area__content">
      <view class="line-area phonenumber-area">
        <text class="area__left">手机号</text>
        <text class="area__right">{{ number }}</text>
      </view>
      <view class="line-area code-area">
        <text class="area__left">验证码</text>
        <input class="input-area-input {{ errCodeTips ? 'input_error' : '' }}" bindinput="bindInput" type="number"
          maxlength="6" placeholder-class="placeholder" style="width: 128px" bindfocus="inputFocus"
          bindblur="blurFocus" />
        <view wx:if="{{ showSend }}" class="input-area-send" bindtap="sendClick" hover-class="gray_active">
          获取验证码
        </view>
        <view wx:if="{{ !showSend }}" class="input-area-send resend"> 重新发送({{ second }}s) </view>
      </view>
    </view>
    <view class="tips" bindtap="tipsClick" hover-class="text_active">收不到验证码</view>
  </view>

  <view class="next-button {{ isIphoneX ? 'next-button_iphonex' : '' }} {{ next ? 'next-button_active' : '' }}"
    hover-class="{{ next ? 'green_active' : '' }}"
    style="bottom:{{ bottomValue ? bottomValue + 'px' : isIphoneX ? '142px' : '128px' }}" focus="true"
    bindtap="nextClick">
    {{ buttonName }}
  </view>
  <view wx:if="{{ bottomTips }}" class="product-info {{ isIphoneX ? 'product-info_iphonex' : '' }}">
    {{ bottomTips }}
  </view>

